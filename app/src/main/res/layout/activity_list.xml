<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/fragmentAddNewItem"
        android:name="com.basgeekball.smarping.fragments.NewItemFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_row_margin_to_side"
        android:layout_marginTop="@dimen/list_row_margin_to_other"
        android:layout_marginRight="@dimen/list_row_margin_to_side"
        android:layout_marginBottom="@dimen/list_row_margin_to_other" >
    </fragment>

    <com.basgeekball.smarping.views.BackgroundContainer
        android:id="@+id/listViewBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/list_row_margin_to_side"
            android:layout_marginTop="@dimen/list_row_margin_to_other"
            android:layout_marginRight="@dimen/list_row_margin_to_side"
            android:layout_marginBottom="@dimen/list_row_margin_to_other"
            android:divider="@null"
            android:dividerHeight="6dp"
            android:listSelector="@color/gray" >
        </ListView>

    </com.basgeekball.smarping.views.BackgroundContainer>
    
</LinearLayout>